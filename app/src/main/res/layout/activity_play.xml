<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity">


    <ImageView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/playbac"
        android:scaleType="centerCrop"
        android:layout_height="match_parent">
    </ImageView>


    <View
        android:layout_width="match_parent"
        android:background="#D8474640"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="match_parent">
    </View>


<androidx.cardview.widget.CardView
    android:id="@+id/questioncard"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="100dp"
    >

    <TextView
        android:id="@+id/questionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="বাংলাদেশের সব থেকে বেশি\n কোন ফসল উৎপাদন হয়?"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:textSize="30dp" />

</androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/questioncard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="32dp"
        >

        <RadioGroup
            android:id="@+id/quizGroup"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RadioButton
                android:textSize="25dp"
                android:text="আম"
                android:id="@+id/option1"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <RadioButton
                android:textSize="25dp"
                android:text="জাম"
                android:id="@+id/option2"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <RadioButton
                android:textSize="25dp"
                android:text="ধান"
                android:id="@+id/option3"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <RadioButton
                android:textSize="25dp"
                android:text="পাট "
                android:id="@+id/option4"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </RadioGroup>

    </androidx.cardview.widget.CardView>




<androidx.appcompat.widget.AppCompatButton
    android:layout_width="match_parent"
    android:id="@+id/nextbtn"
    android:text="NEXT PLEASE"
    android:textColor="#000000"
    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginVertical="32dp"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/btn_back_yellow"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_height="wrap_content">





</androidx.appcompat.widget.AppCompatButton>





</androidx.constraintlayout.widget.ConstraintLayout>